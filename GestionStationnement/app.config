  <system.serviceModel>
    <services>
      <service name="GestionStationnement.Models.SensorUpdateService"
        behaviorConfiguration = "QuickMessageServiceMEXBehavior">
        <endpoint address ="service"
        binding="wsDualHttpBinding"
         contract="GestionStationnement.Models.ISensorUpdateService"/>
        <!-- Enable the MEX endpoint -->
        <endpoint address="mex"
        binding="mexHttpBinding"
        contract="IMetadataExchange" />

        <!-- Need to add this so MEX knows the address of our service -->
        <host>
          <baseAddresses>
            <add baseAddress ="http://localhost:8081/UpdateService"/>
          </baseAddresses>
        </host>

      </service>
    </services>
    <!-- A behavior definition for MEX -->
    <behaviors>
      <serviceBehaviors>
        <behavior name="QuickMessageServiceMEXBehavior" >

          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  
</configuration>
